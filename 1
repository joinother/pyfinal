from tkinter import*
from tkinter import messagebox

root = Tk()

root.title("我的第一个GUI程序")
root.geometry("500x300+100+200")        #长度 宽度  左边100 上边200


btn01 = Button(root)

btn01["text"] = "点我就送花"


def songhua(e): #e就是事件对象
    messagebox.showinfo("Message","送你一朵小红花")
    print("送你99朵向日葵")

btn01.bind("<Button-1>",songhua)
btn01.pack()        



root.mainloop()